					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="30" />
							<RowDefinition Height="{TemplateBinding Height}" />
						</Grid.RowDefinitions>
						<DockPanel Width="{TemplateBinding Width}"
