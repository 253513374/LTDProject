
<MudDialog  >
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3"/>编辑奖品数量
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField HideSpinButtons="true" @bind-Value="PrizeCount" Label="请输入参加活动奖品的数量" Variant="Variant.Text" Min="1" Max="100" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(()=>MudDialog.Cancel())">取消</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Class="px-10">确定</MudButton>
    </DialogActions>
</MudDialog>
@code {


  

    
    private int PrizeCount=1;
    // private void OpenDialog() => visible = true;

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
   
    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(PrizeCount));
    }
}
