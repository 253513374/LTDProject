    <ItemsPanelTemplate x:Key="ItemsControlItemsPanel1">
        <ScrollViewer x:Name="scrList" Margin="0" HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="0" Width="{Binding ElementName=scrList, Path=Width, Mode=OneWay}"
                       HorizontalAlignment="Stretch" Orientation="Horizontal" />
        </ScrollViewer>
    </ItemsPanelTemplate>
</ResourceDictionary>