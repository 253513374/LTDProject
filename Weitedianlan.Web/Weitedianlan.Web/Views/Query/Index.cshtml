<body>
    <nav class="Hui-breadcrumb"><i class="icon-home"></i> 首页 <span class="c-gray en">&gt;</span> 后台中心 <span class="c-gray en">&gt;</span> 数据查询 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="icon-refresh"></i></a></nav>
    <div class="pd-20">

        <div class="text-c">

            <input type="text" class="input-text" style="width:250px" placeholder="输入防伪码" id="qrcodeid" name="qrcodeid">&nbsp;&nbsp;

            &nbsp;<a name="sex" value="1">或者</a>&nbsp;
            <input type="text" class="input-text" style="width:250px" placeholder="输入提货单号" id="orderid" name="orderid">&nbsp;&nbsp;&nbsp;&nbsp;

            <button type="button" class="btn btn-success" onclick="search()"><i class="icon-search"></i> 搜数据</button>
        </div>
        <div class="recount">
            <a class=""></a>
        </div>
        &nbsp;
        <span></span>
        &nbsp;
            <table class="table table-border table-bordered table-hover table-bg table-sort">
                <thead>
                    <tr class="text-c">
                        <th width="50">排序</th>
                        <th width="30">ID</th>
                        <th width="120">防伪码</th>
                        <th width="65">操作人员</th>
                        <th width="130">提货单号</th>
                        <th width="65">物料单位</th>
                        <th width="130">客户编号</th>
                        <th width="180">下单时间</th>
                        <th width="180">出库时间</th>
                    </tr>
                </thead>
                <tbody id="querys_contents">
                </tbody>
            </table>
            <div id="pageNav" class="pageNav"></div>
        </div>
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/layer/layer.min.js"></script>
