        <script type="text/javascript">
            //function del(obj, id)
            //{
            //        layer.confirm('确认要删除吗？', function (index) {
            //            $(obj).parents("tr").remove();
            //            layer.msg('已删除!', 1);
            //        });
            //    }
            function search() {
                var Qrcodeid = $("#qrcodeid").val();
                var Orderid = $("#orderid").val();
                pageIndex = 1;
                getQuery(Qrcodeid, Orderid);
            }
            function getQuery(Qrcodeid, Orderid) {
                $.ajax({
                    type: 'get',
                    async: true,
                    url: '/Query/GetQuerys',
                    data: { Qrcodeid: Qrcodeid, Orderid: Orderid },
                    success: function (result) {
                        if (result.total > 0) {
                            $("recount").empty();
                            $("#querys_contents").empty();
                            for (var i = 0; i < result.total; i++) {
                                var trData = result.data[i];
                                var tr = '<tr class="text-c">'
                                    + '<td>' + i + '</td>'
                                    + '<td>' + trData.id + '</td>'
                                    + '<td>' + trData.qrCode + '</td>'
                                    + '<td>' + trData.adminaccount + '</td>'
                                    + '<td>' + trData.orderNumbels + '</td>'
                                    + '<td>' + trData.extensionName + '</td>'
                                    + '<td>' + trData.dealers + '</td>'
                                    + '<td>' + trData.orderTime + '</td>'
                                    + '<td>' + trData.outTime + '</td>'
                                    + '</tr>';
                                
                                $("#querys_contents").append(tr);
                            }
                            $("recount").append('<a>总数量：'+result.total+'</a>');
                            //alert(result.total);
                           // reload();

                        };
                    }
                });
            }
            function reload() {
                location.replace(location.href);
            }

        </script>
