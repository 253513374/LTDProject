    <title>添加账户</title>
</head>
<body>
    <div class="pd-20">
        <div class="Huiform">
            <form method="post" id="addForm" enctype="multipart/form-data">
                <table class="table table-bg">
                    <tbody>
                        <tr>
                            <th class="text-r">账号：</th>
                            <td><input type="text" style="width:300px" class="input-text" value="" placeholder="" id="userid" name="userid" ></td>
                        </tr>
                        <tr>
                            <th class="text-r">密码：</th>
                            <td><input type="text" style="width:300px" class="input-text" value="" placeholder="" id="pwd" name="pwd" ></td>
                        </tr>
                        <tr>
                            <th class="text-r">姓名：</th>
                            <td><input type="text" style="width:300px" class="input-text" value="" placeholder="" id="username" name="username" ></td>
                        </tr>
                        <tr>
                            <th class="text-r">所属级别：</th>
                            <td>
                                <select id="agentid" name="agentid">
                                    <option value="0" selected>0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <button class="btn btn-success radius" type="button" onclick="add()"><i class="icon-ok"></i> 确定</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/Validform_v5.3.2_min.js"></script>
    <script type="text/javascript" src="~/js/H-ui.js"></script>
    <script type="text/javascript" src="~/js/H-ui.admin.js"></script>
    <script type="text/javascript">

        $(".Huiform").Validform();
        function add() {
            var formData = new FormData(document.getElementById("addForm"));
            $.ajax({
                type: 'post',
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                url: '/User/AddUser',
                data: formData,
                success: function (data)
                {
                     parent.reload();
                    //if (data.Code == 200)
                    //{
                       
                    //   // reload();
                    //}
                    //else
                    //{7
                    //    alert(data.Status);
                    //    reload();
                    //}
                }
            });
            }
     function reload() {
            location.replace(location.href);
        }
    </script>
</body>
</html>
