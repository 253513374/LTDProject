

@{
    Layout = null;
}
@model Weitedianlan.Model.Response.ResponseModel
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="/js/html5.js"></script>
    <script type="text/javascript" src="/js/respond.min.js"></script>
    <script type="text/javascript" src="/js/PIE_IE678.js"></script>
    <![endif]-->
    <link type="text/css" rel="stylesheet" href="/css/H-ui.css" />
    <link type="text/css" rel="stylesheet" href="/css/H-ui.admin.css" />
    <link type="text/css" rel="stylesheet" href="/font/font-awesome.min.css" />
    <!--[if IE 7]>
    <link href="/font/font-awesome-ie7.min.css" rel="stylesheet" type="text/css" />
    <![endif]-->
    <title>数据统计</title>
</head>
<body>
    <nav class="Hui-breadcrumb"><i class="icon-home"></i> 首页 <span class="c-gray en">&gt;</span> 后台中心 <span class="c-gray en">&gt;</span> 数据统计 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="icon-refresh"></i></a></nav>
    <div id="pop" style="z-index:1;background-color:#CCCCCC;filter: alpha(opacity=80);width:100%;height:100%;position:absolute;left:0px;top:0px;display:none">
        <!-- <div style="text-align:center;height:100%;line-height:250px;overflow:hidden;">发送中,请稍等...</div> -->
    </div>
    <div id="loading" class="loading f-30" style="display:none;">发送中,请稍等...</div>
    <div class="pd-20">
        <div class="text-c">

            <span class="f-18 " bottom="0" for="meeting">查询日期：</span>&nbsp;&nbsp;

            <input class="f-18" id="querydatatime" name="querydatatime" type="date" style="width:300px" />&nbsp;&nbsp;
            <select class="select" id="selectId" name="selectId">
                <option value="0" selected>默认查询</option>
                @for(int t=2;t<11;t++)
                {
                <option value="@t">查询-@t- 天数据</option>
                }
                <option value="14">查询-14- 天数据</option>
                <option value="21">查询-21- 天数据</option>
                <option value="30">查询-30- 天数据</option>
                <option value="31">查询-31- 天数据</option>
            </select>

            <button type="button" class="btn btn-success" onclick="search()"><i class="icon-search"></i> 搜数据</button>
        </div>
        &nbsp;
        &nbsp;
        <div class="text-c">
            @if (Model.Code == 200)
            {
            <span class="f-18" id="ordercount" name="ordercount">提货单总数量:@Model.DataCount</span>
            <span style="width:100px;"></span>
            <span class="f-18" id="codecount" name="codecount">防伪码总数量：@Model.QrcodeDataCount</span>
            }


        </div>

        &nbsp;
        <table class="table table-border table-bordered table-hover table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="80">ID</th>
                    <th width="80">提货单号</th>
                    <th width="200">客户名称</th>
                    <th width="80">下单时间</th>
                    <th width="100">提货数量</th>
                    <th width="60">操作</th>
                </tr>
            </thead>
            <tbody id="querydate_tbody">
                @if (Model.Code == 200)
                {

                    int id = 0;
                    foreach (var item in Model.Data)
                    {
                        <tr class="text-c">
                            <td>@id</td>
                            <td>@item.OrderNumbels</td>
                            <td>@item.Aname</td>
                            <td>@item.OrderTime</td>
                            <td>@item.Count</td>
                            <td><a title="查看详细" href="javascript:;" onClick="user_edit('4','1280','800','查看详细','/Wlabel/Details?id=@item.OrderNumbels')" class="ml-5" style="text-decoration:none"><i class="icon-edit">查看详细</i></a></td>
                        </tr>
                        id = id + 1;
                    }
                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/layer/layer.min.js"></script>
    <script type="text/javascript" src="/js/pagenav.cn.js"></script>
    <script type="text/javascript" src="/js/H-ui.js"></script>
    <script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/js/H-ui.admin.js"></script>
    <script type="text/javascript">
        function search() {
            var msg = layer.msg('努力中加载中...', {icon: 16,shade: [0.5, '#f5f5f5'],scrollbar: false,offset: '0px',time: 0});
            //var loading = document.getElementById("loading");
            var ordercount = document.getElementById("ordercount");
            var codecount= document.getElementById("codecount");
            var datetimestr = document.getElementById("querydatatime").value;
            
            var selectId = $("#selectId").val();
            $.ajax({
                type: 'get',
                async: true,
                url: '/Wlabel/GetQuerys',
                data: { datetimestr: datetimestr, selectId: selectId },
                success: function (result) {

                  
                  //  alert("查询到总数量：" + result.total);
                    ordercount.innerText = "提货单总数量:" + result.total;
                    codecount.innerHTML = "防伪码总数量:" + result.qrcount;

                    var id = "'4'";
                    var w = "'1280'";
                    var h = "'800'";
                    var tel = "'查看详细'";
                    var tr = "";
                     $("#querydate_tbody").empty();
                    for (var i = 0; i < result.total; i++) {
                            var trData = result.data[i];
                            var strurl = "'/Wlabel/Details?id=" + trData.orderNumbels + "'";
                             tr = '<tr class="text-c">'
                                + '<td>' + i + '</td>'
                                + '<td>' + trData.orderNumbels + '</td>'
                                + '<td>' + trData.aname + '</td>'
                                + '<td>' + trData.orderTime + '</td>'
                                + '<td>' + trData.count + '</td>'
                                + '<td><a title="查看详细" href="javascript:;" onClick="user_edit(' + id + ',' + w + ',' + h + ',' + tel + ',' + strurl + ')" class="ml-5" style="text-decoration:none"><i class="icon-edit">查看详细</i></a></td>'
                            + '</tr>';
                          $("#querydate_tbody").append(tr);
                           
                        }
                   
                    layer.close(msg);
                    //reload();
                }
            });
        }

        function reload() {
            location.replace(location.href);
        }
    </script>

</body>
</html>