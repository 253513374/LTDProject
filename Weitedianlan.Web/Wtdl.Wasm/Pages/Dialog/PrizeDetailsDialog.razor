<MudDialog Class="dialog">
    <DialogContent>
        <div Class="image-container">
            <img class="centered-image" src="imgs/tou2.png" style="width: 80%;" />
            <MudIconButton OnClick="Cancel" Icon="@Icons.Material.Outlined.Close" Size="Size.Medium" Color="Color.Info" Class="right-button"></MudIconButton>
        </div>
        <MudContainer Class="mudcontainer" Style="max-height: 80vh; width: 100%; overflow-y: scroll">
            <MudStack Justify="Justify.Center" Spacing="2" Style="overflow: hidden; ">
            
                @if (PrizeDetails is not null)
                {
                    var imgpath = $"http://admin.rewt.cn/{PrizeDetails.ImageUrl.Replace('\\', '/')}";
                    <img class="mt-5" src="@imgpath" style="width: 100%; height: auto" />

                    <MudStack Class="my-8" Justify="Justify.FlexStart" Spacing="2">
                        <MudText Typo="Typo.h6"> <strong style="letter-spacing: .3em">@PrizeDetails.Name</strong></MudText>
                        <MudText> @PrizeDetails.Description</MudText>
                        <MudText Typo="Typo.button">中奖概率： @PrizeDetails.Probability</MudText>
                    </MudStack>
                    
                }
            </MudStack>
        </MudContainer>
    </DialogContent>

</MudDialog>


@code {


    [CascadingParameter] public MudDialogInstance MudDialog { get; set; }

    [Parameter] public PrizeResult PrizeDetails { get; set; }


    void Cancel()
    {
        MudDialog.Cancel();
    }
}